#Profile for using conan in debian buster in a docker container
#and cross compiling for raspbian rpi

toolchain=/rpi-rootfs/
target_host=aarch64-linux-gnu
cc_compiler=gcc
cxx_compiler=g++

[env]
CHOST=$target_host
AR=$target_host-ar
AS=$target_host-as
RANLIB=$target_host-ranlib
CC=$target_host-$cc_compiler
CXX=$target_host-$cxx_compiler
STRIP=$target_host-strip
RC=$target_host-windres
ASMFLAGS=-mcpu=cortex-a53
CFLAGS=-mcpu=cortex-a53
CXXFLAGS=-mcpu=cortex-a53
CONAN_CMAKE_TOOLCHAIN_FILE=/build/examples/rnbo.oscquery.runner/config/rpi-xpile-toolchain.cmake

[conf]
#boost fails without this
tools.build:sysroot=/rpi-rootfs/

[settings]
os=Linux
arch=armv8
build_type=Release
compiler=gcc
compiler.version=12
compiler.libcxx=libstdc++11
